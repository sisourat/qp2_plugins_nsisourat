@article{Chelkowska91,
title = "Auger spectroscopy for molecules: Tables of matrix elements for transition-rate calculations corresponding to an s-, p-, or d-type initial hole",
journal = "Atomic Data and Nuclear Data Tables",
volume = "49",
number = "1",
pages = "121 - 206",
year = "1991",
note = "",
issn = "0092-640X",
doi = "http://dx.doi.org/10.1016/0092-640X(91)90013-T",
url = "http://www.sciencedirect.com/science/article/pii/0092640X9190013T",
author = "Elzbieta Z. Chelkowska and Frank P. Larkins",
abstract = "Auger transition rate matrix element expressions for molecules based upon s, p, and d atomic basis sets to describe the valence molecular orbitals are presented for processes involving s-, p-, or d-type initial holes. The expressions are tabulated in terms of the real and imaginary parts of the singlet and triplet components for the various allowed continuum channels. Auger transition rates for molecules may be calculated within an intra-atomic model using these expressions and published atomic Auger matrix elements (M. H. Chen, F. P. Larkins, and B. Crasemann, Atomic Data and Nuclear Data Tables, 41, 1, 1990). Values from the latter relevant to the present work are also tabulated. An example is presented for the Cl(L23-VV) spectrum associated with the HCl molecule."
}

@article{Mitani03,
title = "Theoretical molecular Auger spectra with electron population analysis ",
journal = "Journal of Electron Spectroscopy and Related Phenomena ",
volume = "128",
number = "2–3",
pages = "103 - 117",
year = "2003",
note = "",
issn = "0368-2048",
doi = "http://dx.doi.org/10.1016/S0368-2048(02)00270-0",
url = "http://www.sciencedirect.com/science/article/pii/S0368204802002700",
author = "Masaki Mitani and Osamu Takahashi and Ko Saito and Suehiro Iwata",
keywords = "Core excitation",
keywords = "Auger transition rate",
keywords = "Normal Auger spectrum",
keywords = "Molecular orbital method",
keywords = "Electron population analysis ",
abstract = "An approximation method is proposed to simulate the molecular Auger spectra. Auger transition rates are estimated with atomic populations of valence orbitals on an excited atom by Mulliken and Löwdin population analyses. Normal Auger energies and relative rates for \{H2O\} and \{NH3\} molecules are evaluated using a full \{CI\} wave functions among the valence orbitals constructed from \{SCF\} orbitals for the neutral ground state and for the core-hole excited state. Theoretical spectra show fairly good correspondence with the experimental spectra. It is demonstrated that the present approach is applicable for qualitative assignment and analysis of Auger spectra for larger molecules. "
}


